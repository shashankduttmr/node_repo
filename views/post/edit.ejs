<% layout('headers/boilers') %> 

<div class="mt-5">
    <div class="row">
        <h1 class="text-center">Edit Post</h1>
        <div class="col-6 offset-3">
            <form action="/post/<%= data._id %>/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="name" required value="<%= data.name %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="locations" required value="<%= data.locations %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="imgs" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="description"
                        required><%= data.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <% for(let x = 0; x < data.imgs.length; x++){ %>
                        <label for="<%= data.imgs[x].filename %>">Delete ?</label>
                        <img src="<%= data.imgs[x].url %>" class="img-thumbnail" style="height: 200px; width: 200px;">
                        <input type="checkbox" name="deleteImages[]" value="<%= data.imgs[x].filename %>" id="<%= data.imgs[x].filename %>">
                    <% } %>   
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
        </div>
    </div>
</div>